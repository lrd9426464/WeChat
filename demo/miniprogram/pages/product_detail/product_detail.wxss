/* 轮播图 */
.banner{
  display: flex;
  width: 100%;
  height: 700rpx;
  flex-direction: row;
  align-self: center;
  padding-top: 10rpx;
}
.banner_1{
  width: 100%;
  height: 700rpx;
}
.img{
  width: 100%;
  height: 700rpx;
}

/* 分割线 */
.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136,135,135);
  margin-bottom: 30rpx;
}

/* 产品信息 */
.product{
  display: flex;
  flex-direction: column;
  width: 96%;
  align-self: center;
  margin-bottom: 20rpx;
}
.product_1{
  display: flex;
  width: 60%;
  font-size: 20px;
  margin: 20rpx 0;
}

/* 商品详情 */
.product_xq{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}

/* 按钮 */
.pay{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-self: center;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}
.pay_1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  width: 20%;
}
.pay_2{
  display: flex;
  width: 80%;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: #ff8601;
  color: #fff;
  font-size: 18px;
}