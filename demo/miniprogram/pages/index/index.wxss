
page{
  background-color:#ff6801;
}

/* 搜索框 */
.search{
  width: 80%;
  height: 60rpx;
  display: flex;
  border: 1px solid slategray;
  border-radius: 40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  background-color: white;
}

/* 搜索列表 */
.list{
  width: 88%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  align-self: center;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.list_1{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 轮播图 */
.banner{
  display: flex;
  width: 100%;
  height: 400rpx;
  flex-direction: row;
  align-self: center;
  margin-top: 30rpx;
}
.swiper{
  width: 100%;
  height: 400rpx;
}
.img{
  width: 100%;
  height: 400rpx;
}

/* 分类模块 */
.fenlei{
  width: 95%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
  justify-content: space-around;
  padding: 0 20rpx;
}
.fenlei_1{
  display: flex;
  flex-direction: column;
  width: 22%;
  align-items: center;
  align-self: center;
  justify-content: center;
}
.fenlei_2{
  display: flex;
  flex-direction: column;
}
/* 商品分类 */
/* 分割线 */
.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136,135,135);
  margin-bottom: 30rpx;
}

/* 商品 */
.product{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center;
  background-color: snow;
}
.product_1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.product_img{
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.product_2{
  height: 60rpx;
  width: 80%;
  display: flex;
  flex-direction: row;
  border: 1px solid silver;
  background-color: rgb(245,239,239);
  border-radius: 50rpx;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
  margin: 10rpx 0 30rpx;
}